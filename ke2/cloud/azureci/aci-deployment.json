{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "name": "azureci",
      "location": "Japan East",
      "properties": {
      "diagnostics": "[if(and(not(empty(parameters('logAnalyticsWorkspaceId'))), not(empty(parameters('logAnalyticsKey')))), json(concat('{\"logAnalytics\":{\"workspaceId\":\"', parameters('logAnalyticsWorkspaceId'), '\",\"workspaceKey\":\"', parameters('logAnalyticsKey'), '\",\"logType\":\"ContainerInsights\"}}')), json('{}'))]",
        "containers": [
          {
            "name": "kompira",
            "properties": {
              "image": "[variables('keimage')]",
              "resources": {
                "requests": {
                  "cpu": 1, 
                  "memoryInGB": 2
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              },
              "environmentVariables": [
                { "name": "DATABASE_URL", "value": "[parameters('databaseUrl')]" },
                { "name": "AMQP_URL", "value": "amqp://guest:guest@localhost:5672" },
                { "name": "CACHE_URL", "value": "redis://localhost:6379" },
                { "name": "UWSGI_BUFFER_SIZE", "value": 65536 },
                { "name": "TZ", "value": "[parameters('timezone')]" },
                { "name": "HOSTNAME_SHORT", "value": "kompira" }
              ],
              "volumeMounts": [
                {
                  "name": "kompira-var",
                  "mountPath": "/var/opt/kompira"
                },
                {
                  "name": "kompira-log",
                  "mountPath": "/var/log/kompira"
                }
              ],
              "command": ["docker-entrypoint.sh", "uwsgi"]
            }
          },
          {
            "name": "kengine",
            "properties": {
              "image": "[variables('keimage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 6
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              },
              "environmentVariables": [
                { "name": "DATABASE_URL", "value": "[parameters('databaseUrl')]" },
                { "name": "AMQP_URL", "value": "amqp://guest:guest@localhost:5672" },
                { "name": "CACHE_URL", "value": "redis://localhost:6379" },
                { "name": "TZ", "value": "[parameters('timezone')]" },
                { "name": "MAX_EXECUTOR_NUM", "value": "[parameters('maxExecutor')]"},
                { "name": "HOSTNAME_SHORT", "value": "kengine" }
              ],
              "volumeMounts": [
                {
                  "name": "kompira-var",
                  "mountPath": "/var/opt/kompira"
                },
                {
                  "name": "kompira-log",
                  "mountPath": "/var/log/kompira"
                }
              ],
              "command": ["docker-entrypoint.sh", "kompirad"]
            }
          },
          {
            "name": "jobmngrd",
            "properties": {
              "image": "[variables('keimage')]",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 2
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              },
              "environmentVariables": [
                { "name": "AMQP_URL", "value": "amqp://guest:guest@localhost:5672" },
                { "name": "TZ", "value": "[parameters('timezone')]" },
                { "name": "HOSTNAME_SHORT", "value": "jobmngrd" }
              ],
              "volumeMounts": [
                {
                  "name": "kompira-var",
                  "mountPath": "/var/opt/kompira"
                },
                {
                  "name": "kompira-log",
                  "mountPath": "/var/log/kompira"
                }
              ],
              "command": ["docker-entrypoint.sh", "jobmngrd"]
            }
          },
          {
            "name": "redis",
            "properties": {
              "image": "registry.hub.docker.com/library/redis:7.2-alpine",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 2
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              }
            }
          },
          {
            "name": "rabbitmq",
            "properties": {
              "image": "registry.hub.docker.com/library/rabbitmq:3.12-alpine",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 2
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              },
              "ports":[
                {
                  "port": 5671
                }
              ],
              "volumeMounts": [
                {
                  "name": "rabbitmq-conf",
                  "mountPath": "/etc/rabbitmq/conf.d"
                },
                {
                  "name": "ssl-cert",
                  "mountPath": "/etc/rabbitmq/ssl"
                }
              ]
            }
          },
          {
            "name": "nginx",
            "properties": {
              "image": "registry.hub.docker.com/library/nginx:1.25-alpine",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 2
                },
                "limits":{
                  "cpu": 4,
                  "memoryInGB": 16
                }
              },
              "environmentVariables": [
                { "name": "KOMPIRA_HOST", "value": "localhost" },
                { "name": "KOMPIRA_PORT", "value": 8000 }
              ],
              "volumeMounts": [
                {
                  "name": "kompira-var",
                  "mountPath": "/var/opt/kompira"
                },
                {
                  "name": "kompira-nginx-conf",
                  "mountPath": "/etc/nginx/templates"
                },
                {
                  "name": "ssl-cert",
                  "mountPath": "/etc/nginx/ssl"
                }
              ],
              "ports": [
                {
                  "port": 80
                },
                {
                  "port": 443
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "volumes": [
          {
            "name": "kompira-var",
            "azureFile": {
              "shareName": "kompira-var",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          },
          {
            "name": "kompira-nginx-conf",
            "azureFile": {
              "shareName": "kompira-nginx-conf",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          },
          {
            "name": "ssl-cert",
            "azureFile": {
              "shareName": "ssl-cert",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          },
          {
            "name": "rabbitmq-conf",
            "azureFile": {
              "shareName": "rabbitmq-conf",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          },
          {
            "name": "kompira-log",
            "azureFile": {
              "shareName": "kompira-log",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]",
              "readOnly": false
            }
          }
        ],
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('dnsNameLabel')]",
          "ports": [
            {
              "protocol": "TCP",
              "port": 80
            },
            {
              "protocol": "TCP",
              "port": 443
            },
            {
              "port": 5671
            }
          ]
        },
        "restartPolicy": "Always"
      },
      "tags": {
        "ke-azureaci": "keapp"
      }
    }
  ],
  "variables": {
    "keimage": "[concat('kompira.azurecr.io/kompira-enterprise:', parameters('imageTag'))]"
  },
  "parameters": {
    "databaseUrl": {
      "type": "string"
    },
    "imageTag":{
      "type": "string"
    },
    "timezone":{
      "type": "string"
    },
    "maxExecutor":{
      "type": "int"
    },
    "dnsNameLabel":{
      "type":"string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "storageAccountKey": {
      "type": "string"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string"
    },
    "logAnalyticsKey": {
      "type": "string"
    }
  }
}
